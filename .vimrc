

syntax on


set fileformat=unix
set encoding=UTF-8

au BufNewFile,BufRead *.py
    \ set tabstop=4 |
    \ set softtabstop=4 |
    \ set shiftwidth=4 |


set tabstop=2
set softtabstop=2
set shiftwidth=2
set autoindent
set smartindent
set smarttab
set expandtab


set nowrap
set list
set listchars=eol:.,tab:>-,trail:~,extends:>,precedes:<


set cursorline
set number
set relativenumber
set scrolloff=8
set signcolumn=yes
























